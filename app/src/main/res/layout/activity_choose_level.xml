<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.baymax.language_app.ChooseLevel">

    <TextView
        android:id="@+id/asking_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How your English looks?"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btn_beginner"
        android:text="Doodle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/asking_level"
        android:onClick="nextActivity"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/medium"
        android:text="Artwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_beginner"/>

</RelativeLayout>

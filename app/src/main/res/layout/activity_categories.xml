<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    tools:context="com.baymax.language_app.Categories">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/container_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_categories">
                <ImageButton
                    android:background="@drawable/food_01"
                    android:layout_marginTop="355dp"

                    android:layout_width="105dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="30dp"
                    android:contentDescription="Food"
                    android:onClick="goLessons"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
